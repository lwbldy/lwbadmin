<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pearadmin.modules.test.mapper.TestTableMapper">

    <resultMap id="TestTableMap" type="TestTable">
        <id column="id" property="id"></id>
        <result column="name" property="name"></result>
        <result column="ip" property="ip"></result>
        <result column="add_time" property="addTime"></result>
    </resultMap>

    <select id="selectList" resultMap="TestTableMap">
        select * from test_table
        <where>
        <if test="name!=null and name!=''">
            and name = #{name}
        </if>

        <if test="ip!=null and ip!=''">
            and ip like CONCAT('%',#{ip}, '%')
        </if>
    
        </where>

        order by id desc

    </select>

    <!-- 根据 Id 查询角色-->
    <select id="selectById" parameterType="int" resultMap="TestTableMap">
        select * from test_table where id = #{id}
    </select>


    <!-- 新增 数据 -->
    <insert id="insert" parameterType="TestTable">
        insert into test_table
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name!=null">
                name,
            </if>
            <if test="ip!=null">
                ip,
            </if>
            <if test="addTime!=null">
                add_time,
            </if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="name!=null">
                #{name},
            </if>
            <if test="ip!=null">
                #{ip},
            </if>
            <if test="addTime!=null">
                #{addTime},
            </if>
        </trim>
    </insert>

    <!-- 根据 Id 修改角色数据 -->
    <update id="updateById" parameterType="TestTable">
        update test_table
        <set>
    <if test="name!=null and name!=''">
        name = #{name},
    </if>
    <if test="ip!=null and ip!=''">
        ip = #{ip},
    </if>
    <if test="addTime!=null and addTime!=''">
        add_time = #{addTime},
    </if>
        </set>
        where id = #{id}
    </update>

    <!-- 根据 Id 删除 -->
    <delete id="deleteById" parameterType="int">
        delete from test_table where id = #{id}
    </delete>

    <!-- 根据 Id 批量删除 -->
    <delete id="deleteByIds" parameterType="int">
        delete from test_table where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>